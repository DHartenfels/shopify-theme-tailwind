{
  "name": "shopify-theme-tailwindcss",
  "version": "2.1.3",
  "description": "A starting point for an Online Store 2.0 theme using Tailwind CSS",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "shopify": "cd shopify && shopify theme serve",
    "start": "run-p watch:*",
    "build": "cross-env NODE_ENV=production npm-run-all build:*",
    "build:css": "npx tailwindcss -i ./src/global.css -o ./shopify/assets/global.css",
    "build:js": "npx rollup -c",
    "watch:css": "npx tailwindcss -i ./src/global.css -o ./shopify/assets/global.css -w",
    "watch:js": "npx rollup -c -w",
    "install-theme": "node scripts/install-theme.js --repo=https://github.com/Shopify/dawn.git"
  },
  "keywords": [
    "Shopify Theme",
    "Online Store 2.0"
  ],
  "author": "Wessel van Ree <hello@wesselvanree.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@shopify/prettier-plugin-liquid": "^0.2.1",
    "@swc/core": "^1.2.224",
    "cross-env": "^7.0.3",
    "fast-glob": "^3.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rollup": "^2.77.2",
    "rollup-plugin-swc": "^0.2.1",
    "tailwindcss": "^3.1.8"
  }
}
